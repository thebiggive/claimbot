{
    "name": "thebiggive/claimbot",
    "description": "Gift Aid claim runner",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0.2",
        "ext-redis": "*",
        "brick/postcode": "^0.2.6",
        "maxbanton/cwh": "^2.0",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6.3",
        "symfony/amazon-sqs-messenger": "^6.0",
        "symfony/console": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/messenger": "^6.0",
        "symfony/redis-messenger": "^6.0",
        "thebiggive/hmrc-gift-aid": "^1.0.2",
        "thebiggive/messages": "^2.0"
    },
    "require-dev": {
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "ClaimBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClaimBot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "claimbot:poll": [
            "Composer\\Config::disableProcessTimeout",
            "php claimbot-cli.php claimbot:poll"
        ],
        "messenger:consume": [
            "Composer\\Config::disableProcessTimeout",
            "php claimbot-cli.php messenger:consume -vvvv --time-limit=600"
        ],
        "lint:check": "phpcs --standard=phpcs.xml -s .",
        "lint:fix": "phpcbf --standard=phpcs.xml -s .",
        "test": "phpunit",
        "test-with-coverage": "phpdbg -qrr ./vendor/bin/phpunit --coverage-clover=coverage.xml"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Noel Light-Hilary",
            "email": "noel@thebiggive.org.uk"
        }
    ]
}
